<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/mainTextBlue"
    android:padding="30dp">

    <ImageView
        android:id="@+id/backCrossBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backCrossBtn">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userProfileImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/user_1_img" />

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Harsh Kushwaha"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phnCountryCodeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/userPhoneNoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="4005732005"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/myProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="50dp"
                android:drawablePadding="10dp"
                android:text="My Profile "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_user" />
            <TextView
                android:id="@+id/tncBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_shopping_cart"
                android:drawablePadding="10dp"
                android:text="Cart"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/walletBn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_bell"
                android:drawablePadding="10dp"
                android:text="Notifications"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/aboutUsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_about_us"
                android:drawablePadding="10dp"
                android:text="About Us"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/contactUsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="10dp"
                android:text="Settings"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/privacyPolicyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_privacy_policy"
                android:drawablePadding="10dp"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/logOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:drawableStart="@drawable/ic_log_out"
        android:drawablePadding="10dp"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>
